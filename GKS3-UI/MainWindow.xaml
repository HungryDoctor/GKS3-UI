            <ColumnDefinition Width="366"/>
            <ColumnDefinition Width="311"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="41"/>
            <RowDefinition Height="Auto" MinHeight="347"/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="ComparationDataGrid" Grid.Column="1" HorizontalAlignment="Left" Margin="11,10,0,0" Grid.Row="1" VerticalAlignment="Top" LoadingRow="ComparationDataGrid_LoadingRow" FontSize="14" Height="12" Width="12"/>
