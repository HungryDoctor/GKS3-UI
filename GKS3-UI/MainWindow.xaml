        <Label Content="Матрица сравнений" HorizontalAlignment="Left" Margin="78,6,0,0" Width="148" FontSize="14" Grid.Column="1" Height="29" VerticalAlignment="Top"/>
        <Label Content="Группы" Grid.Column="2" HorizontalAlignment="Left" Margin="90,6,0,0" Width="117" FontSize="14" Height="29" VerticalAlignment="Top"/>
        <Label Content="Отсортированные группы" Grid.Column="2" HorizontalAlignment="Left" Margin="44,180,0,0" Grid.Row="1" VerticalAlignment="Top" Width="193" FontSize="14" Height="29"/>
        <TextBlock x:Name="GroupsUTextBlock" Grid.Column="2" HorizontalAlignment="Left" Margin="10,10,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="14" Height="12" Width="1"/>
        <TextBlock x:Name="GroupsTextBlock" Grid.Column="2" HorizontalAlignment="Left" Margin="10,209,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="14" Height="12" Width="1"/>

    </Grid>
</Window>
